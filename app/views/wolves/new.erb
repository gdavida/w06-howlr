<div class="container">
<div class="row">
<div class="col s12 m10 offset-m1 ">

  <% if @wolf.errors.any? %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card-panel">
            <ul>
              <% @wolf.errors.full_messages.each do |e| %>
                <li><%= e %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  <% end %>        




 <div class="row">
    <form action="/wolves/<%= @wolf.id %>" method="post" class="col s12">
      <div class="row">
        <div class="input-field col xs12 s12 m12">
          <input name="name" type="text" class="validate" value="<%= @wolf.name %>">
          <label for="name">Name</label>
        </div>
        <div class="input-field col xs12 s12 m12">
          <input name="picture_url" type="text" class="validate" value="<%= @wolf.picture_url %>">
          <label for="picture_url">Profile Picture URL</label>
        </div>
        <div class="input-field col xs12 s12 m12">
          <input name="caption" type="text" class="validate" length="80" value="<%= @wolf.caption %>">
          <label for="caption">Caption</label>
        </div>
      </div>
      <div class="row">
        <div class="left">
          <a class="waves-effect waves-light btn red lighten-2" href="/">Back</a>
        </div>
        <div class="right">
          <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">Join the Pack
          </button>
        </div>
      </div>
    </form>
  </div>

  </div>
  </div>
  </div>