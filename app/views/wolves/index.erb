<div class="container">
<div class="row">
<div class="col s12 m8 offset-m2">
  <h4>You have <%= @wolves.count %> in your pack</h4>

    <ul class="collection">
  <% @wolves.each do |w| %>
        <li class="collection-item avatar">
          <img src="<%= w.picture_url %>" alt="" class="circle">
          <span class="title"><%= w.name %></span>
          <p class="bioCaption"><%= w.caption %></p>
          <p class="secondary-content">3 howls</p>
        </li>

      <% end %>
      </ul>
  
      <div>
        <a class="btn waves-effect waves-light right red darken-4" href="/wolves/new">New Pack Member</a>
      </div>
</div>
</div>
</div>