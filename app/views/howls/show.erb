  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col s11 offset-s1 m5 offset-m4">
      <ul class="collection">
      <% @howlbacks.each do |h| %>
        <li class="collection-item avatar">
          <img src="<%= h.wolf.picture_url %>" alt="" class="circle">
          <span class="title"><%= h.wolf.name %></span>
          <% if h.response_image_url? %>
                  <img src="<%= h.response_image_url %>" alt="" class="howlImage">
                <% end %>
          <p class="responseText"><%= h.message %>
          </p>
          <a href="#!" class="secondary-content">Today</a>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
       



