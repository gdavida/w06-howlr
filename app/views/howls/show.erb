


<div class = "container">
<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card">
      <div class="card-content howlCard">
        <span class="card-title" href="/howls/<%= @howlid %>"><%= @howl.wolf.name %></span>
        <img src="<%= @howl.wolf.picture_url %>" alt="" class="howlProfileImage circle right">
        <a class="right secondary-content">Today</a><br>
        <img src="<%= @howl.share_image_url %>" alt="" class="howlImage">
        <p><%= @howl.howl %></p>
      </div>
    <div class="card-action">
        <a href="#">Howl Back (0)</a>
        <a href="#">Like (0)</a>
    </div>
  </div>   
